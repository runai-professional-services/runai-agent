{# Universal LIST template - works for any resource type #}
import requests

{% include '_base/auth.j2' %}

# Step 2: List {{ resource_type }} resources
{% if project %}
# Project-scoped list
response = requests.get(
    f"{base_url}/api/v1/{{ category }}/{{ resource_type }}",
    headers=headers,
    params={"projectId": "{{ project }}"} if "{{ project }}" else {},
    verify=True
)
{% else %}
# Cluster-wide list
response = requests.get(
    f"{base_url}/api/v1/{{ category }}/{{ resource_type }}",
    headers=headers,
    verify=True
)
{% endif %}

response.raise_for_status()
result = response.json()

